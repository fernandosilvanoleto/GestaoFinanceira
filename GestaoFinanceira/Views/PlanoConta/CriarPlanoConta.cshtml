@model PlanoContaModel

<h3>Criar Plano de Contas</h3>

<form asp-controller="PlanoConta" asp-action="CriarPlanoConta">

    <div class="form-group">
        <label>Descricao:</label>
        <input type="text" class="form-control" asp-for="Descricao" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tipo:</label>
        <input type="radio" class="form-control" asp-for="Tipo" value="Receita" />
        <input type="radio" class="form-control" asp-for="Tipo" value="Despesa"/>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>

</form>
