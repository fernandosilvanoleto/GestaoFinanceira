@model GestaoFinanceira.Models.PlanoContaModel

@{
    ViewData["Title"] = "EditarPlanoConta";

    var vDescricao = "";
    var vTipo = "";

    try
    {
        vDescricao = @ViewBag.ContaEspecifica.Descricao.ToString();
        vTipo = @ViewBag.ContaEspecifica.Tipo.ToString();
    }
    catch { }
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="PlanoConta" asp-action="EditarPlanoConta">

    <div class="form-group">
        <label>Descricao:</label>
        <input type="text" class="form-control" asp-for="Descricao" value="@vDescricao"/>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tipo:</label>
        @{ if (vTipo == "R")
            {
                <div class="radio">
                    <label><input type="radio" asp-for="Tipo" value="R" checked />Receita</label>
                </div>
                <div class="radio">
                    <label><input type="radio" asp-for="Tipo" value="D" unchecked />Despesas</label>
                </div>
            }
            else
            {
                <div class="radio">
                    <label><input type="radio" asp-for="Tipo" value="R" unchecked />Receita</label>
                </div>
                <div class="radio">
                    <label><input type="radio" asp-for="Tipo" value="D" checked />Despesas</label>
                </div>
            }
        }
    </div>

    <button type="submit" class="btn btn-block btn-success">Atualizar</button>
</form>