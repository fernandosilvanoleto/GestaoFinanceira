
@{
    ViewData["Title"] = "Conta - ";
}

<h2>Index - Contas Cadastradas</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>#</th>
            <th>ID</th>
            <th>NOME</th>
            <th>SALDO</th>
        </tr>
    </thead>
    @{ 
        foreach (var item in (List<ContaModel>)ViewBag.ListaContaController)
        {
            <tbody>
                <tr>
                    <td><button type="button" class="btn btn-danger" onclick="Excluir(@item.Id.ToString())">Excluir</button></td>
                    <td><button type="button" class="btn btn-primary" onclick="Editar(@item.Id.ToString())">Editar</button></td>
                    <td>@item.Id.ToString()</td>
                    <td>@item.Nome.ToString()</td>
                    <td>R$ @item.Saldo.ToString()</td>
                </tr>
            </tbody>
        }
    }
</table>

<button type="button" class="btn btn-block btn-primary" onclick="CriarConta()">Criar Conta</button>

<script>
    function CriarConta() {
        window.location.href = "../Conta/CriarConta";
    }

    function Excluir(idConta) {
        window.location.href = "../Conta/ExcluirConta/" + idConta;
    }

    function Editar(Id) {
        window.location.href = "../Conta/Editar/" + Id;
    }
</script>

